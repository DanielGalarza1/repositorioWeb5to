<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
  </configSections>
  <connectionStrings>
    <add name="ServicioUbicacion.Properties.Settings.conexionBD"
      connectionString="Data Source=DESKTOP-7PMMU6Q;Initial Catalog=UbicacionNegocio;Integrated Security=True"
      providerName="System.Data.SqlClient" />
  </connectionStrings>

	<system.webServer>
		<httpProtocol>
			<customHeaders>
				<add name="Access-Control-Allow-Origin" value="*" />
				<add name="Access-Control-Allow-Methods" value="GET, POST, OPTIONS" />
				<add name="Access-Control-Allow-Headers" value="Content-Type" />
			</customHeaders>
		</httpProtocol>
	</system.webServer>
	
  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.7.2" />
    <httpRuntime targetFramework="4.7.2"/>

	  <webServices>
		  <protocols>
			  <add name="HttpGet"/>
			  <add name="HttpPost"/>
		  </protocols>
	  </webServices>
  </system.web>

	<system.serviceModel>

	  <behaviors>
		  <endpointBehaviors>
			  <behavior name="webBehavior">
				  <webHttp defaultOutgoingResponseFormat="Json" />
				  <webHttp />
			  </behavior>
		  </endpointBehaviors>
	  </behaviors>
	  
	  <services>
		  <service name="ServicioUbicacion.Service1">
			  <endpoint address="" binding="webHttpBinding" contract="ServicioUbicacion.IService1" behaviorConfiguration="webBehavior" />
		  </service>
	  </services>
	  
     <serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
	  
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!-- Para evitar revelar información de los metadatos, establezca los valores siguientes en false antes de la implementación -->
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
          <!-- Para recibir detalles de las excepciones en los errores para la depuración, establezca el siguiente valor en true. Para no revelar información sobre las excepciones establézcalo en false antes de la implementación -->
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>

		<endpointBehaviors>
			<behavior name="web" >
				<webHttp/>
			</behavior>
		</endpointBehaviors>
		
	</behaviors>

	  <bindings>
		  <webHttpBinding>
			  <binding name="webHttpBindingJson" crossDomainScriptAccessEnabled="true" />
		  </webHttpBinding>
	  </bindings>

	  <services>
		  <service name="ServicioUbicacion.Service1">
			  <endpoint address="" binding="webHttpBinding" bindingConfiguration="webHttpBindingJson"
      contract="ServicioUbicacion.IService1" behaviorConfiguration="web">
			  </endpoint>
		  </service>

		  <service name="ServicioUbicacion.Service1">
			  <endpoint address="" binding="webHttpBinding" contract="ServicioUbicacion.IService1" behaviorConfiguration="webBehavior" />
		  </service>

	  </services>


	  <protocolMapping>
        <add binding="basicHttpsBinding" scheme="https" />
    </protocolMapping>    
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <!--
        Para examinar el directorio raíz de la aplicación web durante la depuración, establezca el valor siguiente en true.
        Establézcalo en false antes de la implementación para evitar revelar información sobre la carpeta de aplicación web.
      -->
    <directoryBrowse enabled="true"/>
  </system.webServer>

</configuration>
